/* pages/Events/events.wxss */
.pageContainer{
  position: absolute;
  height: 100%;
  width: 100%;
  background-color: #f4f4f4;
}

.btnContainer{
  position: fixed;
  bottom: 50rpx;
  width:100%;
  vertical-align: center;
  overflow: auto;
}

.btn-new{
  width: 300rpx;
  height: 80rpx;
  margin: 0 auto;
  font-size: 32rpx;
  text-align: center;
  line-height: middle;
  background-color: #47a86c;
  border-radius: 20rpx;
  color: #fff;
}

.formContainer{
  height: 95%;
  width: auto;
  overflow: auto;
  padding: 5%;
}

.activityContainer{
  position: relative;
  display: flex;
  box-sizing: border-box;
  width: 100%;
  background-color: #f0c9cf;
  /* background-color: #BDFCC9; */
  -webkit-box-shadow:0px 3px 3px #c8c8c8 ;
  -moz-box-shadow:0px 3px 3px #c8c8c8 ;
  box-shadow:0px 3px 3px #c8c8c8 ;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

